@using Microsoft.AspNet.Identity
@using System.Security.Claims;
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <nav id="oi" class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink(((ClaimsIdentity)User.Identity).FindFirst("FullName").ToString().Replace("FullName: ", ""), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", style="width:25vh; text-align:right;" })</li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Logoff</a></li>
        </nav>
    }
}
else
{
    <nav class="nav navbar-nav navbar-right">
        <li style="text-align:right;">@Html.ActionLink("Login", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        <li>@Html.ActionLink("Registre-se", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
    </nav>
}

