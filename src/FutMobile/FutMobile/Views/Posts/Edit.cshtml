@model FutMobile.Models.Post

@{
    ViewBag.Title = "Edit";
}
<script>
    window.onload = function () {
        document.getElementById("indice").className = "animation start-dois";
        $('[id^=esconder_]').hide();
    };
</script>

@if (User.Identity.Name == Model.UserLogin || User.IsInRole("Administrator"))
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="col-md-3"></div>
        <div class="col-md-6 backgroungLogin" style="text-align:center; margin-top:2vh;">
            <div class="form-horizontal">
                <div class="col-md-12" style="padding-bottom:10px;">
                    <img src="../../Utilities/FutMobile_logo.png" width=170 height=170 />
                    <br /><br />
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Codigo)

                <div class="form-group">
                    <div class="col-md-1"></div>
                    <div class="col-md-10">
                        @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label col-md-12", @style = "text-align:left" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 100% !important;" } })
                            @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-1"></div>
                    <div class="col-md-10">
                        @Html.LabelFor(model => model.Categoria, htmlAttributes: new { @class = "control-label col-md-12", @style = "text-align:left" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Categoria, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 100% !important;" } })
                            @Html.ValidationMessageFor(model => model.Categoria, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-1"></div>
                    <div class="col-md-10">
                        @Html.LabelFor(model => model.Msg, htmlAttributes: new { @class = "control-label col-md-12", @style = "text-align:left" })
                        <div class="col-md-12">

                            @Html.TextAreaFor(model => model.Msg, new { style = "white-space:pre-wrap; max-height:100% !important; max-width:100% !important;", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Msg, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12" style="text-align:center">
                        <input type="submit" value="Editar" class="btn btn-fut" style="height:40px; padding:0px;" />
                    </div>
                </div>
            </div>

            <div>
                @Html.ActionLink("Voltar", "Index")
            </div>

        </div>
        }

}

else {<h2>Usuario não autorizado a editar este post</h2>}
