@model FutMobile.Models.MotivoModel

@{
    ViewBag.Title = "Especifique o motivo da remoção";
}

<script>
    window.onload = function () {
        document.getElementById("indice").className = "animation start-quatro";
        $('[id^=esconder_]').hide();
    };
</script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-md-2"></div>
    <div class="col-md-8 backgroungLogin" style="text-align:center; margin-top:2vh;">

        <div class="form-horizontal">
            <h4>Favor especificar o motivo de você desejar a remoção deste campeonato:</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-12", @style = "text-align:left" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "max-width: 100% !important;" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MotivoDaRemocao, htmlAttributes: new { @class = "control-label col-md-12", @style = "text-align:left" })
                <div class="col-md-12">
                    @Html.TextAreaFor(model => model.MotivoDaRemocao, new { rows = "5", style = "white-space:pre-wrap; max-height:100% !important; max-width:100% !important;", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MotivoDaRemocao, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" value="Enviar" class="btn btn-fut" style="height:40px; padding:0px;" />
                </div>
            </div>
        </div>
        <div>
            @Html.ActionLink("Voltar", "Index")
        </div>
    </div>
}

