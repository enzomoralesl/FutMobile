@model FutMobile.Models.Campeonato

@{
    ViewBag.Title = "Delete";
}

<script>
    window.onload = function () {
        document.getElementById("indice").className = "animation start-tres";
        $('[id^=esconder_]').hide();
    };
</script>

<div class="col-md-12 backgroungLogin" style="text-align:left; margin-top:2vh;">
    <div class="col-md-12" style="text-align:center; padding:0px;">
        <h3>Tem certeza que deseja deletar esse campeonato?</h3>
        <hr />
    </div>
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.NomeCamp)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NomeCamp)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SimboloCampPath)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SimboloCampPath)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PrimeiraEdicao)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PrimeiraEdicao)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ResumoCamp)
            </dt>

            <dd>
                @{ var a = Html.Raw(Model.ResumoCamp);}
                @a
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PrincipaisArtilheiros)
            </dt>

            <dd>
                @{ var b = Html.Raw(Model.PrincipaisArtilheiros);}
                @b
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="col-md-12" style="text-align:center; padding:0px; margin-top:-1vh;">
                <input type="submit" value="Deletar" class="btn btn-fut" style="height:40px; padding:0px;" /> <br/>
                @Html.ActionLink("Voltar", "Index")
            </div>
        }
    </div>
</div>