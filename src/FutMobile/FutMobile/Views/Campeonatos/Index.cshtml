@model IEnumerable<FutMobile.Models.Campeonato>

@{
    ViewBag.Title = "Index";
}

<script>
    window.onload = function () {
        document.getElementById("indice").className = "animation start-tres";
        $('[id^=esconder_]').hide();
    };
</script>

<h2>Index</h2>

<p>
    @if (User.IsInRole("Administrator")) { <h4>@Html.ActionLink("Adicionar novo campeonato", "Create")</h4> }
    @if (!User.IsInRole("Administrator")) { <h4>@Html.ActionLink("Sugerir novo campeonato", "Create")</h4> }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeCamp)
        </th>
        <th>
            Logo
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrimeiraEdicao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResumoCamp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrincipaisArtilheiros)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (User.IsInRole("Administrator"))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeCamp)
                </td>
                <td>
                    <img src="@item.SimboloCampPath" width="250" height="250">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrimeiraEdicao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ResumoCamp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrincipaisArtilheiros)
                </td>
                <td>
                    @Html.ActionLink("Detalhes", "Details", new { id = item.CodigoCamp }) |
                    @Html.ActionLink("Editar", "Edit", new { id = item.CodigoCamp }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.CodigoCamp })
                </td>
            </tr>
        }
        else
        {
            if (!item.NomeCamp.StartsWith("Sugestao - "))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeCamp)
                    </td>
                    <td>
                        <img src="@item.SimboloCampPath" width="250" height="250">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrimeiraEdicao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResumoCamp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrincipaisArtilheiros)
                    </td>
                    <td>
                        @Html.ActionLink("Detalhes", "Details", new { id = item.CodigoCamp }) |
                        @Html.ActionLink("Sugerir alteração", "Edit", new { id = item.CodigoCamp }) |
                        @Html.ActionLink("Sugerir deleção", "Delete", new { id = item.CodigoCamp })
                    </td>
                </tr>
            }
        }
    }

</table>
