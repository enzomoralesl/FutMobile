@model FutMobile.Models.Comentario

@{
    ViewBag.Title = "Edit";
}

@{
    Layout = null;
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CodigoCom)

        <div class="form-group">
            @Html.LabelFor(model => model.MsgCom, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.MsgCom, new { htmlAttributes = new { style = "white-space:pre-wrap; max-height:100% !important; max-width:100% !important;", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MsgCom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group"  style="text-align:right;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Editar" class="btn btn-fut" style="height:30px; padding:0px;" />
            </div>
        </div>
    </div>
}

