@model FutMobile.Models.Time

@{
    ViewBag.Title = "Create";
}

<script>
    window.onload = function () {
        document.getElementById("indice").className = "animation start-quatro";
        $('[id^=esconder_]').hide();
    };
</script>

@using (Html.BeginForm("Create", "Times", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="col-md-2"></div>
    <div class="col-md-8 backgroungLogin" style="text-align:center; margin-top:2vh;">
        <div class="form-horizontal">
            <h4>Criar time</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.NomeTime, htmlAttributes: new { @class = "control-label col-md-12", @style = "text-align:left" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.NomeTime, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 100% !important;" } })
                    @Html.ValidationMessageFor(model => model.NomeTime, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.BrasaoPath, htmlAttributes: new { @class = "control-label col-md-6", @style = "text-align:left" })
                @Html.LabelFor(model => model.Fundacao, htmlAttributes: new { @class = "control-label col-md-6", @style = "text-align:left" })
                <div class="col-md-6">
                    <input type="file" name="ImageFile" required>
                </div>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Fundacao, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 100% !important;" } })
                    @Html.ValidationMessageFor(model => model.Fundacao, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Resumo, htmlAttributes: new { @class = "control-label col-md-12", @style = "text-align:left" })
                <div class="col-md-12">
                    @Html.TextAreaFor(model => model.Resumo, new { rows = "5", style = "white-space:pre-wrap; max-height:100% !important; max-width:100% !important;width:100%;", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Resumo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ResumoTitulos, htmlAttributes: new { @class = "control-label col-md-12", @style = "text-align:left" })
                <div class="col-md-12">
                    @Html.TextAreaFor(model => model.ResumoTitulos, new { rows = "5", style = "white-space:pre-wrap; max-height:100% !important; max-width:100% !important;width:100%;", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ResumoTitulos, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Mundial, htmlAttributes: new { @class = "control-label col-md-6", @style = "text-align:left" })
                @Html.LabelFor(model => model.Libertadores, htmlAttributes: new { @class = "control-label col-md-6", @style = "text-align:left" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Mundial, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 100% !important;" } })
                    @Html.ValidationMessageFor(model => model.Mundial, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Libertadores, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 100% !important;" } })
                    @Html.ValidationMessageFor(model => model.Libertadores, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Brasileiro, htmlAttributes: new { @class = "control-label col-md-6", @style = "text-align:left" })
                @Html.LabelFor(model => model.CopaDoBrasil, htmlAttributes: new { @class = "control-label col-md-6", @style = "text-align:left" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Brasileiro, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 100% !important;" } })
                    @Html.ValidationMessageFor(model => model.Brasileiro, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.CopaDoBrasil, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 100% !important;" } })
                    @Html.ValidationMessageFor(model => model.CopaDoBrasil, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3"><br /><br /></div>
                @Html.LabelFor(model => model.Estadual, htmlAttributes: new { @class = "control-label col-md-6", @style = "text-align:left" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Estadual, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 100% !important;" } })
                    @Html.ValidationMessageFor(model => model.Estadual, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" value="Criar" class="btn btn-fut" style="height:40px; padding:0px;" />
                </div>
            </div>
        </div>
        <div>
            @Html.ActionLink("Voltar", "Index")
        </div>
    </div>
}

